@model TvTuner.Episode

<script type="text/javascript">
    $(document).ready(function () {
        
        $("video").on("ended", function () {
            window.location = "../RandomEpisode/" + $("#ShowID").val();
        });
    });


</script>
<div class="text-center">
    <input type="hidden" id="ShowID" value="@Model.SeriesID"/>

    <a href="@Url.Action("Show", new { id = Model.SeriesID })">
        <img class="img-rounded" src="@Url.Action("GetSeriesBanner", new { id = @Model.Series.SeriesID })"/></a>
    <h3>Season @Model.Season Episode @Model.EpisodeNumber - @Model.Name</h3>
    <video width="640" height="480" controls="controls" autoplay="autoplay" >
        <source src="@Model.VideoPath" type="video/mp4"/>
    </video>
</div>

