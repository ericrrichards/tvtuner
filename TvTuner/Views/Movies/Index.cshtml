@using TvTuner
@model TvTuner.Controllers.MoviesIndex


<script type="text/javascript">
    
    </script>
<div class="well">
    <form class="form-inline " role="form" action="@Url.Action("Search")">
        <div class="form-group">
            <input type="text" placeholder="Search" id="searchForm" class="form-control" name="fragment" />
        </div>
        <button type="submit" class="btn btn-default">Search</button>

    </form>
    <div class="dropdown">
        <button class="dropdown-toggle btn btn-default" id="dropdownMenu1" data-toggle="dropdown">Genres <span class="caret"></span></button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
            @foreach (var genre in Model.Genres) {
                <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Index", new { genre})">@genre</a></li>
            }
        </ul>
    </div>
</div>


@foreach (var movie in Model.movies) {
    <div class="col-md-2">
        <a href="@Url.Action("Watch", new { id = movie.MovieID })" class="movieLink">
            <img class="img-rounded poster" src="@Url.Action("GetMovieBanner", "Movies", new { id = movie.MovieID })"/></a>


    </div>
    <div class="col-md-10 info well ">
        <div class="movieTitle">@movie.Title</div>
        <div class="summary">@movie.Year</div>
        <div><span class="@Util.PickColor(movie.Rating)" style="font-size: xx-large">@movie.Rating%</span></div>
        <div class="summary">@movie.Summary</div>

    </div>
        
}
<div class="poster col-md-2"></div>
